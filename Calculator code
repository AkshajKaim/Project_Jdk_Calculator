import java.util.Scanner;

public class Main{
    public static void main(String[]args){
        Scanner scanner = new Scanner(System.in);
        System.out.println("Your \'personal\' Calculator has begin");
        
        System.out.print("Enter the first number:");
        float numop = scanner.nextFloat();
        
        System.out.print("input for second number:");
        float numop2 = scanner.nextFloat();
        
        float adtn = numop+numop2;
        System.out.println("The sum of the numbers is:"+adtn);
        
        float m = numop*numop2;
        System.out.println("The product of the numbers is:"+m);
        
        float d = numop/numop2;
        System.out.println("the qutiont of the number is :"+d);
        
        float s = (float) Math.sqrt(numop);
        System.out.println("the square root of first number is:"+s);
        
        float y = (float) Math.sqrt(numop2);
        System.out.println("The square root of second number is:"+y);
        //the program has ended 
        System.out.println("The program has ended!!!");
        
        float r = (float) (Math.random()*200);
        System.out.println("the tip for next time is:"+r);
        scanner.close();
        
    }
}
